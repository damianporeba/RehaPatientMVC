@model RehaPatientMVC.Application.ViewModels.AdminPanel.ListUsersForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { email=item.Email }) |
                @Html.ActionLink("Details", "Details", new { email=item.Email }) |
                @Html.ActionLink("Delete", "Delete", new { email=item.Email })
            </td>
        </tr>
}
    </tbody>
</table>
